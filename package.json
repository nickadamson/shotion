{
    "name": "shotion",
    "description": "Versatile Productivity App: Self-Hosted Edition",
    "version": "0.1.0",
    "private": false,
    "keywords": [],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nickadamson/shotion/issues"
    },
    "homepage": "https://github.com/nickadamson/shotion#readme",
    "prisma": {
        "schema": "db/prisma/schema.prisma",
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} db/prisma/seed.ts"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lintfix": "next lint --fix",
        "pretty": "npx prettier --write ./src",
        "seed": "npx prisma db seed",
        "studio": "npx prisma studio",
        "reseed": "npx prisma format && npx prisma generate && npx prisma migrate dev --name new",
        "create-sqlite": "node ./db/util/createSqliteDB.js",
        "create-postgres": "sudo -u postgres createdb shotion -p 5433 -O postgres",
        "psql-restart-cluster": "sudo pg_ctlcluster 12 main restart",
        "psql-connect": "sudo -u postgres psql -p 5433 shotion",
        "prepare": "husky install"
    },
    "dependencies": {
        "@prisma/client": "^4.0.0",
        "@radix-ui/react-accessible-icon": "^1.0.1",
        "@radix-ui/react-alert-dialog": "^1.0.2",
        "@radix-ui/react-checkbox": "^1.0.1",
        "@radix-ui/react-collapsible": "^1.0.1",
        "@radix-ui/react-context-menu": "^2.0.1",
        "@radix-ui/react-dialog": "^1.0.2",
        "@radix-ui/react-dropdown-menu": "^2.0.1",
        "@radix-ui/react-navigation-menu": "^1.1.1",
        "@radix-ui/react-popover": "^1.0.2",
        "@radix-ui/react-portal": "^1.0.1",
        "@radix-ui/react-progress": "^1.0.1",
        "@radix-ui/react-radio-group": "^1.1.0",
        "@radix-ui/react-scroll-area": "^1.0.1",
        "@radix-ui/react-select": "^1.1.1",
        "@radix-ui/react-separator": "^1.0.1",
        "@radix-ui/react-tabs": "^1.0.1",
        "@radix-ui/react-toast": "^1.1.1",
        "@radix-ui/react-toggle": "^1.0.1",
        "@radix-ui/react-toggle-group": "^1.0.1",
        "@radix-ui/react-toolbar": "^1.0.1",
        "@radix-ui/react-tooltip": "^1.0.2",
        "@radix-ui/react-visually-hidden": "^1.0.1",
        "@tanstack/react-table": "^8.2.6",
        "better-sqlite3": "^7.6.1",
        "cuid": "^2.1.8",
        "next": "12.2.2",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "swr": "^1.3.0"
    },
    "devDependencies": {
        "@next/eslint-plugin-next": "^12.2.2",
        "@types/node": "^17.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.42.0",
        "autoprefixer": "^10.4.7",
        "eslint": "^8.26.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-next": "12.2.2",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "postcss": "^8.4.14",
        "prettier": "^2.7.1",
        "prisma": "^4.0.0",
        "prisma-json-schema-generator": "^3.0.0",
        "react-draggable": "^4.4.5",
        "react-grid-layout": "^1.3.4",
        "tailwindcss": "^3.1.6",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,css,md}": [
            "eslint --fix",
            "prettier --write --ignore-unknown"
        ]
    }
}
